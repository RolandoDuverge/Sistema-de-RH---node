<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <!-- Box icons -->
    <link
      href="https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css"
      rel="stylesheet"
    />

    <title>Sistema de RH</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Navbar</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="#">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Link</a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link disabled"
                href="#"
                tabindex="-1"
                aria-disabled="true"
                >Disabled</a
              >
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-4">     
        <div class="card border-secondary">  
            <div class="card-header"><b>Nuevo candidato</b></div>
            <div class="card-body">
                <form action="/saveCan" method="POST">
                    <div class="mb-3">
                    <label for="candidato" class="form-label">Cedula</label>
                    <input type="text" class="form-control" id="cedula" name="cedula" maxlength="11" tabindex="1" required> 
                      </div>         
                        <div class="mb-3">
                          <label for="candidato" class="form-label">Nombre</label>
                          <input type="text" class="form-control" id="nombre" name="nombre" tabindex="2" required>
                          </div>   
                            <div class="mb-3">
                              <label for="candidato" class="form-label">Puesto al que aspira</label>
                              <select id="puestoAspira" name="puestoAspira" class="form-select" value="<%= puestoresults %>" aria-label="Default select example" tabindex="3">
                                  <% for(var i = 0; i <= puestoresults.length-1; i++) { %>
                                    <option value="<%= puestoresults[i].id  %>"><%= puestoresults[i].nombre  %></option>
                                  <% } %>
                                </select>                   
                              </div> 
                            <div class="mb-3">
                              <label for="candidato" class="form-label">Departamento</label>
                              <select id="departamento" name="departamento" class="form-select" value="<%= results %>" aria-label="Default select example" tabindex="4">
                                  <% for(var i = 0; i <= results.length-1; i++) { %>
                                    <option value="<%= results[i].id  %>"><%= results[i].nombre  %></option>
                                  <% } %>
                                </select>                   
                              </div> 
                              <div class="mb-3">
                                <label for="candidato" class="form-label">Salario al que aspira</label>
                                <input type="number" min="1" max="32328329683629" class="form-control" id="salarioAspira" name="salarioAspira" tabindex="5" required>
                                </div>  
                                  <div class="mb-3">
                                    <label for="candidato" class="form-label">Principales competencias</label>
                                    <select id="principalesCompetencias" name="principalesCompetencias" class="form-select" value="<%= resultsCompe %>" aria-label="Default select example" tabindex="6">
                                        <% for(var i = 0; i <= resultsCompe.length-1; i++) { %>
                                          <option value="<%= resultsCompe[i].id  %>"><%= resultsCompe[i].descripcion  %></option>
                                        <% } %>
                                      </select>                   
                                    </div>  
                                    <div class="mb-3">
                                      <label for="candidato" class="form-label">Principales capacitaciones</label>
                                      <select id="principalesCapacitaciones" name="principalesCapacitaciones" class="form-select" value="<%= resultsCapa %>" aria-label="Default select example" tabindex="7">
                                          <% for(var i = 0; i <= resultsCapa.length-1; i++) { %>
                                            <option value="<%= resultsCapa[i].id  %>"><%= resultsCapa[i].descripcion  %></option>
                                          <% } %>
                                        </select>                   
                                      </div> 
                                      <div class="mb-3">
                                        <label for="candidato" class="form-label">Experiencia laboral</label>
                                        <select id="experienciaLaboral" name="experienciaLaboral" class="form-select" value="<%= resultsExpe %>" aria-label="Default select example" tabindex="8">
                                            <% for(var i = 0; i <= resultsExpe.length-1; i++) { %>
                                              <option value="<%= resultsExpe[i].id  %>"><%= resultsExpe[i].empresa %></option>
                                            <% } %>
                                          </select>                   
                                        </div>   
                                      <div class="mb-3">
                                        <label for="candidato" class="form-label">Recomendado por</label>
                                        <input type="text" class="form-control" id="recomendado" name="recomendado" tabindex="9" required>
                                        </div>  
 
                    <button type="submit" class="btn btn-primary" tabindex="8">Guardar</button>
                    <a href="/indexCan" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>
        </div>        
  </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
