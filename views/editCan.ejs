    <% if (candidato) { %>
    <div class="container mt-4">     
        <div class="card border-secondary">  
            <div class="card-header"><b>Editar candidato</b></div>
            <div class="card-body">
                <form action="/updateCan" method="POST">
                    <input id="id" name="id" value="<%= candidato.id %>" hidden>
                    <div class="mb-3">
                    <label for="candidato" class="form-label">Cedula</label>
                    <input type="text" maxlength="11" class="form-control" id="cedula" name="cedula" value="<%= candidato.cedula %>" tabindex="1">
                    </div>   
                    <div class="mb-3">
                      <label for="candidato" class="form-label">Nombre</label>
                      <input type="text" class="form-control" id="nombre" name="nombre" value="<%= candidato.nombre %>" tabindex="2">
                      </div>  
                      <div class="mb-3">
                        <label for="candidato" class="form-label">Puesto al que aspira</label>
                        <input type="text" class="form-control" id="puestoAspira" name="puestoAspira" value="<%= candidato.puestoAspira %>" tabindex="3">
                        </div>  
                        <div class="mb-3">
                          <label for="candidato" class="form-label">Departamento</label>
                          <input type="text" class="form-control" id="departamento" name="departamento" value="<%= candidato.departamento  %>" tabindex="4">
                          </div>  
                          <div class="mb-3">
                            <label for="candidato" class="form-label">Salario al que aspira</label>
                            <input type="number" min="1" max="32932632873" class="form-control" id="salarioAspira" name="salarioAspira" value="<%= candidato.salarioAspira %>" tabindex="5">
                            </div>   
                            <div class="mb-3">
                              <label for="candidato" class="form-label">Principales competencias</label>
                              <input type="text" class="form-control" id="principalesCompetencias" name="principalesCompetencias" value="<%= candidato.principalesCompetencias %>" tabindex="6">
                              </div>     
                              <div class="mb-3">
                                <label for="candidato" class="form-label">Principales capacitaciones</label>
                                <input type="text" class="form-control" id="principalesCapacitaciones" name="principalesCapacitaciones" value="<%= candidato.principalesCapacitaciones %>" tabindex="7">
                                </div>     
                                <div class="mb-3">
                                  <label for="candidato" class="form-label">Experiencia laboral</label>
                                  <input type="text" class="form-control" id="experienciaLaboral" name="experienciaLaboral" value="<%= candidato.experienciaLaboral %>" tabindex="8">
                                  </div>     
                                  <div class="mb-3">
                                    <label for="candidato" class="form-label">Recomendado por</label>
                                    <input type="text" class="form-control" id="recomendado" name="recomendado" value="<%= candidato.recomendado %>" tabindex="9 ">
                                    </div>     
      
                    <button type="submit" class="btn btn-primary" tabindex="10">Guardar</button>
                    <a href="/indexCan" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>
        </div>        
  </div>
  <% } %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
