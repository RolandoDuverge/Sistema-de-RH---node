    <% if (experiencia) { %>
    <div class="container mt-4">     
        <div class="card border-secondary">  
            <div class="card-header"><b>Editar experiencia laboral</b></div>
            <div class="card-body">
                <form action="/updateExpe" method="POST">
                    <input id="id" name="id" value="<%= experiencia.id %>" hidden>
                    <div class="mb-3">
                    <label for="experiencia" class="form-label">Empresa</label>
                    <input type="text" class="form-control" id="empresa" name="empresa" value="<%= experiencia.empresa %>" tabindex="1">
                    </div>   
                      <div class="mb-3">
                        <label for="experiencia" class="form-label">Puesto ocupado</label>
                        <input type="text" class="form-control" id="puesto" name="puesto" value="<%= experiencia.puesto %>" tabindex="2">
                        </div>  
                        <div class="mb-3">
                          <label for="experiencia" class="form-label">Fecha desde</label>
                          <input type="date" class="form-control" id="fechaPre" name="fechaPre" value="<%= experiencia.fechaPre %>" tabindex="3">
                          </div>  
                          <div class="mb-3">
                            <label for="experiencia" class="form-label">Fecha hasta</label>
                            <input type="date" class="form-control" id="fechaPos" name="fechaPos" value="<%= experiencia.fechaPos %>" tabindex="4">
                            </div>  
                            <div class="mb-3">
                              <label for="experiencia" class="form-label">Salario</label>
                              <input type="number" min="1" max="231312312312" class="form-control" id="salario" name="salario" value="<%= experiencia.salario %>" tabindex="5">
                              </div>  
       
                    <button type="submit" class="btn btn-primary" tabindex="6">Guardar</button>
                    <a href="/indexExpe" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>
        </div>        
  </div>
  <% } %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
